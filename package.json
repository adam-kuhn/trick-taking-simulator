{
  "name": "trick-taking-simulator",
  "version": "0.0.0",
  "main": "server/app.js",
  "scripts": {
    "ng": "ng",
    "start": "npm run start.server NODE_ENV='prod'",
    "complete.production": "npm run build.client.production && npm run start.server",
    "complete.development": "npm run build.client.dev && npm run start.server NODE_ENV='dev'",
    "build.client.production": "ng build --prod",
    "build.client.dev": "ng build",
    "postinstall": "npm run complete.production",
    "test": "ng test",
    "e2e": "ng e2e",
    "start.server": "node ./dist/out-tsc/server/app.js",
    "build.server": "tsc -p tsconfig.json",
    "dev": "NODE_ENV='dev' nodemon server/app.ts",
    "server.test": "mocha --require ts-node/register 'server/test/**/*.ts'",
    "lint": "tsc --noEmit && eslint . --ext js,ts --quiet --fix"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "~11.0.1",
    "@angular/cdk": "^11.0.1",
    "@angular/common": "~11.0.1",
    "@angular/compiler": "~11.0.1",
    "@angular/core": "~11.0.1",
    "@angular/forms": "~11.0.1",
    "@angular/material": "^11.0.1",
    "@angular/platform-browser": "~11.0.1",
    "@angular/platform-browser-dynamic": "~11.0.1",
    "@angular/router": "~11.0.1",
    "@types/chai": "^4.2.14",
    "@types/express": "^4.17.9",
    "@types/socket.io-client": "^1.4.34",
    "axios": "^0.21.1",
    "express": "^4.17.1",
    "rxjs": "~6.6.0",
    "socket.io": "^3.0.3",
    "socket.io-client": "^3.0.3",
    "tslib": "^2.0.0",
    "zone.js": "~0.10.2"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.1100.2",
    "@angular/cli": "~11.0.2",
    "@angular/compiler-cli": "~11.0.1",
    "@types/jasmine": "~3.6.0",
    "@types/node": "^12.11.1",
    "@types/socket.io": "^2.1.11",
    "@typescript-eslint/eslint-plugin": "^4.8.2",
    "@typescript-eslint/parser": "^4.8.2",
    "chai": "^4.2.0",
    "codelyzer": "^6.0.0",
    "eslint": "^7.14.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-prettier": "^3.1.4",
    "jasmine-core": "~3.6.0",
    "jasmine-spec-reporter": "~5.0.0",
    "karma": "~5.1.0",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage": "~2.0.3",
    "karma-jasmine": "~4.0.0",
    "karma-jasmine-html-reporter": "^1.5.0",
    "mocha": "^8.2.1",
    "nodemon": "^2.0.6",
    "prettier": "^2.2.1",
    "prettier-eslint": "^12.0.0",
    "protractor": "~7.0.0",
    "ts-node": "~8.3.0",
    "tslint": "~6.1.0",
    "typescript": "~4.0.2"
  }
}
